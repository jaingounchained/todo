package api

import "github.com/gin-gonic/gin"

const (
	errorJSONKey = "error"
)

func NewError(ctx *gin.Context, status int, err error) {
	er := HTTPError{
		Error: err.Error(),
	}
	ctx.JSON(status, er)
}

type HTTPError struct {
	Error string `json:"error" example:"status bad request"`
}

// Error implements the error interface for ErrInvalidInput.
func (e *HTTPError) Error() string {
	return fmt.Sprintf("invalid input in field '%s': %s", e.Field, e.Problem)
}
